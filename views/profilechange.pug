extends ./layouts/main.pug

block content
  p=tweet
  h1= title
  .container.head
      ul.nav.nav-tabs
        li.active
          a(href='#') Twitter
        li
          a(href='#') Notification
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/logout') Logout
          li
            a(href='#') Link
  .container
    .fb-profile
      img.fb-image-lg(align='left', src='./images/cover.jpg', alt='Profile image example' width ="100%")
      each i in results
        img.fb-image-profile.thumbnail(align='left', src='./images/'+ i.image)
        .fb-profile-text
          h1= i.username
  .container
    .row
      .col-sm-3
        .profile-usermenu
          ul.nav.nav-pills.nav-stacked(data-spy='affix', data-offset-top='205')
            li.active
              a(href='/profilepictureupload')
                i.glyphicon.glyphicon-user
                |               change Profile picture

            li
              a(href='/welcome')
                i.glyphicon.glyphicon-home
                |               home
            li
              a(href='#')
                i.glyphicon.glyphicon-ok
                |               folllowers

      .col-md-6
        .profile-content
          .container
            .row
              h3 Your tweets are here !!!!
              each row in tweets
                .media.block-update-card
                  a.pull-left(href='#')
                    img.media-object.update-card-MDimentions(src='./images/'+ row.image, height = "50px" width="50px")
                  .media-body.update-card-body
                    h5.media-heading=row.username + ' Â· ' + row.time
                    p= row.tweet
                    a(href='/deletetweet/' + row.id)
                      i.glyphicon.glyphicon-trash

      .col-md-3
        .profile-content
          .sidebar-menu
            h3 Your followers!!!!
            each rows in users
              .media.block-update-card
                  a.pull-left(href='#')
                    img.media-object.update-card-MDimentions(src='./images/'+ rows.image, height = "50px" width="50px")
                  .media-body.update-card-body
                    h5.media-heading= rows.username
                    form(method="post" action="/unfollow")
                      input(type="hidden",name="followerId",value=rows.id)
                      button.btn.btn-primary(type="submit") Unfollow
