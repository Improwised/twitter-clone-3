extends ./layouts/main.pug

block content

  h1= title
  #wrapper
    .container.head.navbar-default.navbar-fixed-top(style ="backgroung-color : #ffff")
      ul.nav.nav-tabs
        li.active
          a(href='/welcome')
            i.glyphicon.glyphicon-home(style ="color : #00aced;") &nbsp;
              | Home
        li
          a(href='/profilechange')
            i.glyphicon.glyphicon-user(style ="color : #00aced;") &nbsp;
                | Profile

        li.navbar-right
          a(href='/logout')
            i.glyphicon.glyphicon-off(style ="color : #00aced;") &nbsp;
                  | Logout

    .container
      h1= title
      .page-canvas
        .signin-wrapper
          .row.profile
            .col-sm-3
              .profile-sidebar
                //- SIDEBAR USERPIC
                each profile in results
                  .profile-userpic
                    img.img-responsive(src='./images/'+ profile.image, alt='')
                  .profile-usertitle
                    .profile-usertitle-name(style ="color : #00aced;")= profile.username

                .profile-usermenu
                  ul.nav
                    li
                      a(href='/profilechange')
                        i.glyphicon.glyphicon-user(style ="color : #00aced;")
                          |      Profile
                    li.active
                      a(href='/welcome')
                        i.glyphicon.glyphicon-home(style ="color : #00aced;")
                          |      home
                    li
                      a(href='#', target='_blank')
                        i.glyphicon.glyphicon-ok(style ="color : #00aced;")
                          |    folllowers
                          p= count
                //- END MENU
            .col-sm-6
              .profile-content
                .container
                  .row
                    p(style ="color : #00aced;")
                      i.glyphicon.glyphicon-pencil &nbsp;
                      | What's in your mind ??
                  .row
                    .col-sm-5
                      .widget-area.no-padding.blank
                        .status-upload

                          form(action='/tweet', method='post')

                            textarea(name='tweet' placeholder='What are you doing right now?')

                            button.btn.btn-info(type='submit')
                              i.fa.fa-share
                              |  tweet

                  .row
                    .col-sm-5
                      p &nbsp;
                  .row
                    .col-sm-5
                      each row in tweets
                        .media.block-update-card
                          a.pull-left(href='#')
                            img.media-object.update-card-MDimentions(src='./images/'+ row.image, height = "50px" width="50px")
                          .media-body.update-card-body
                            h5.media-heading(style ="color : #00aced;")=row.username + ' Â· ' + row.time
                            p= row.tweet

            .col-sm-3(style ="padding-top :30px")
              div(class="page-container")
                p(style ="color : #00aced;")
                  i.glyphicon.glyphicon-user &nbsp;
                  | People you may know
                .sidebar-menu
                  each rows in follow
                    p &nbsp;
                    img.img-fluid.thumbnail.card-img-top(src='./images/'+ rows.image ,height="150px" ,width="150px")
                    .card-block
                      h5.card-title(style ="color : #00aced;")= rows.username
                      form(method='post', action='/follower')
                        input(type='hidden',name='followerId',value=rows.user_id)
                        button.btn.btn-info(type='submit') follow
